<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HydroTrackerMaui.MainPage">

    <ScrollView>
        <StackLayout>
            <StackLayout>
                <Label Text="Podsumowanie"/>
                <Grid Padding="10">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Text="Aktualna ilość wypitej wody: " Grid.Row="0" Grid.Column="0"/>
                    <Label x:Name="WaterConsumedLbl" Grid.Row="0" Grid.Column="1"/>
                    <Label Text="Realizacja dziennego celu: " Grid.Row="1" Grid.Column="0"/>
                    <Label x:Name="DailyTargetLbl" Grid.Row="1" Grid.Column="1"/>
                </Grid>
            </StackLayout>
        </StackLayout>
    </ScrollView>

</ContentPage>
